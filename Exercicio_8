#include <iostream>

using namespace std;

//Fa�a um algoritmo que pergunte a dist�ncia que um passageiro deseja percorrer em Km.
//Calcule o pre�o da passagem, cobrando R$0.50 por Km para viagens at� 200Km e R$0.45 para
//viagens mais longas.

int main()
{
    float distancia, valor_passagem;

    cout << "Informe a distancia: ";
    cin >> distancia;

    if (distancia<=200) {
        valor_passagem = distancia*0.50;
    }
    else
        valor_passagem = distancia*0.45;

    cout << valor_passagem;
    return 0;
}