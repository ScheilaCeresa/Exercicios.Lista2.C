#include <iostream>

using namespace std;

int main()
{
//Escreva um programa que pergunte a velocidade de um carro. Caso ultrapasse 80Km/h,
//exiba uma mensagem dizendo que o usuï¿½rio foi multado. Nesse caso, exiba o valor da multa,
// cobrando R$5 por cada Km acima da velocidade permitida.
    float velocidade, valor_multa;

    cout << "Informe a velocidade do carro: ";
    cin >> velocidade;

    if (velocidade>80) {
            valor_multa = (velocidade-80)*5;
    }
    cout << "Valor da multa: "<<valor_multa;
    return 0;
}